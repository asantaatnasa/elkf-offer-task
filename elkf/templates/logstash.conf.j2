input {
  beats {
    port => 5400
  }
}

filter {
  if [input][type] == "log" {
    dissect {
      mapping => {
        "message" => "%{Time} %{+Time} %{Priority} %{Logger} %{RandomNumber} %{RandomSymbol} %{Message}"
      }
    }
  }
  if [input][type] == "container" {
    alter {
      remove_field => [ "log.file.path", "container.id" ]
    }
  }
}

output {
  elasticsearch {
    hosts => "http://{{ containers.elastic.name }}:9200"
  }
}
